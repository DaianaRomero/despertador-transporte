<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="?android:attr/windowBackground"
    android:orientation="vertical"
    android:visibility="visible">
//codigo del mapa osmdroid
    <org.osmdroid.views.MapView
        android:id="@+id/mapview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="2dp" />

    <ImageButton
        android:id="@+id/ic_center_map"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/current_location_icon"
        android:cropToPadding="true"
        android:minWidth="40dp"
        android:minHeight="40dp"
        android:padding="40dp"
        android:scaleType="fitXY" />

    <ImageButton
        android:id="@+id/boton_configuracion"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@+id/ic_center_map"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/settings_icon"
        android:cropToPadding="true"
        android:minWidth="40dp"
        android:minHeight="40dp"
        android:padding="40dp"
        android:scaleType="fitXY" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:text="Â© OpenStreetMap contributors"
        android:textSize="10dp" />


</RelativeLayout>